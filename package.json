{
  "private": false,
  "name": "@supervise-dev/bridge",
  "version": "0.1.3",
  "description": "A tRPC-based bridge for filesystem and process operations with both library and server components",
  "scripts": {
    "bridge": "bun run dist/bridge",
    "build": "pnpm run build:client && pnpm run build:bridge",
    "build:bridge": "bun build src/index.ts --compile --outfile ./dist/bridge --target bun",
    "build:bridge:darwin-arm64": "bun build src/index.ts --compile --outfile ./dist/bridge-darwin-arm64 --target bun",
    "build:bridge:darwin-x64": "bun build src/index.ts --compile --outfile ./dist/bridge-darwin-x64 --target bun",
    "build:bridge:linux-arm64": "bun build src/index.ts --compile --outfile ./dist/bridge-linux-arm64 --target bun",
    "build:bridge:linux-x64": "bun build src/index.ts --compile --outfile ./dist/bridge-linux-x64 --target bun",
    "build:client": "tsc && bun build src/client.ts --outdir ./dist --target node --sourcemap=external",
    "dev:server": "bun run src/index.ts --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src",
    "postinstall": "pnpm run build:bridge",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "bridge": "dist/bridge"
  },
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "dependencies": {
    "@trpc/client": "npm:@trpc/client",
    "@trpc/server": "npm:@trpc/server",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
